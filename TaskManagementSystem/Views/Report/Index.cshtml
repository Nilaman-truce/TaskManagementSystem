@{
    Layout = "_DashboardLayout";

    ViewData["Title"] = "Report";
}

@model IEnumerable<TaskManagementSystem.Models.ReportModel>

<!DOCTYPE html>
<html lang="en">
<head>
    <h3>Report</h3>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Report Management</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
    <div class="container mt-4">
        <div class="row mb-3 justify-content-end">
            <div class="col-md-auto">
                <!-- Download Excel Button -->
                <a href="@Url.Action("DownloadExcel", "Report")" class="btn btn-success me-2">Download Excel</a>

                <!-- Download PDF Button -->
                <a href="@Url.Action("DownloadPdf", "Report")" class="btn btn-primary">Download PDF</a>
            </div>
        </div>
    </div>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Total Tasks</th>
                <th>Pending</th>
                <th>In Progress</th>
                <th>Completed</th>
                <th>Completed (%)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var report in Model)
            {
                <tr>
                    <td>@report.TotalTasks</td>
                    <td>@report.PendingTasks</td>
                    <td>@report.InProgressTasks</td>
                    <td>@report.CompletedTasks</td>
                    <td>@report.CompletedPercentage</td>
                </tr>
            }
        </tbody>
    </table>



</body>
</html>
